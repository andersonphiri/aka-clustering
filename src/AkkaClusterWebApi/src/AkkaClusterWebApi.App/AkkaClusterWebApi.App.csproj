<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <ContainerRepository>webpapitemplate-app</ContainerRepository>
        <ContainerImageTags>$(VersionPrefix);latest</ContainerImageTags> 
        <LangVersion>Latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <ContainerPort Include="80" Type="tcp"/>
        <ContainerPort Include="443" Type="tcp"/>
        <ContainerPort Include="8558" Type="tcp"/>
        <ContainerPort Include="8081" Type="tcp"/>
        <ContainerPort Include="9110" Type="tcp"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Akka.Cluster.Hosting"/>
        <PackageReference Include="Akka.Discovery.Azure"/>
        <PackageReference Include="Akka.HealthCheck.Hosting.Web"/>
        <PackageReference Include="Akka.Management"/>
        <PackageReference Include="Akka.Persistence.Azure.Hosting"/>
        <PackageReference Include="Akka.Streams.SignalR" />
        <PackageReference Include="Akka.Streams.SignalR.AspNetCore" />
        <PackageReference Include="Microsoft.AspNetCore.OpenApi"/>
        <PackageReference Include="Microsoft.AspNetCore.SignalR.Common" />
        <PackageReference Include="Microsoft.AspNetCore.SignalR.Protocols.Json" />
        <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" />
        <PackageReference Include="Petabridge.Cmd.Cluster"/>
        <PackageReference Include="Petabridge.Cmd.Cluster.Sharding"/>
        <PackageReference Include="Petabridge.Cmd.Remote"/>
        <PackageReference Include="Swashbuckle.AspNetCore"/>
    </ItemGroup> 
    <ItemGroup>
        <PackageReference Include="Grpc.AspNetCore"  />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\AkaClusterConsole\AkaClusterConsole.Actors.Contracts\AkaClusterConsole.Actors.Contracts.csproj" />
        <ProjectReference Include="..\..\..\AkaClusterConsole\AkaClusterConsole.Dtos\AkaClusterConsole.Dtos.csproj" />
        <ProjectReference Include="..\AkkaClusterWebApi.Domain\AkkaClusterWebApi.Domain.csproj"/>
    </ItemGroup>

</Project>
